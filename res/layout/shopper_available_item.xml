<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout_shopper_available_item"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tv_shopper_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_shopper_available_email"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/tv_shopper_available_email_icon"
            android:padding="4dp"
            android:textColor="@color/dark_grey_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shopper_available_email_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/shopper_icon"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_shopper_available_distance"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@id/tv_shopper_available_email"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/tv_shopper_distance_icon"
            android:padding="4dp"
            android:textColor="@color/dark_grey_text" />

        <TextView
            android:id="@+id/tv_shopper_distance_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_shopper_available_email"
            android:layout_margin="5dp"
            android:background="@drawable/ic_timeline_black_24dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_accept_shopper_available"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/list_item_button_gradient"
            android:padding="5dp"
            android:text="@string/btn_customer_select_shopper"
            android:textColor="@color/white_text"
            android:textSize="12sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
