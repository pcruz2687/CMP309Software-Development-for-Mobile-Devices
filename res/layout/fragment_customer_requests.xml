<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:background="@drawable/background_gradient">

    // Personal Shopper Layout
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/customer_list"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler_view_customer_list"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="16dp"/>

        <Button
            android:id="@+id/btn_customer_search"
            android:text="@string/btn_shopper_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/recyler_view_customer_list"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/light_green"
            android:textSize="12sp"
            android:background="@drawable/button_shape"
            android:paddingHorizontal="10dp"/>

        <Button
            android:id="@+id/btn_shopper_update_availability"
            android:layout_width="128dp"
            android:layout_height="31dp"
            android:layout_above="@+id/recyler_view_customer_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/btn_customer_search"
            android:textColor="@color/light_green"
            android:textSize="12sp"
            android:background="@drawable/button_shape"
            android:paddingHorizontal="10dp" />

    </RelativeLayout>


    // Customer Layout
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/shopper_list"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler_view_shopper_list"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="16dp"/>

        <Button
            android:id="@+id/btn_shopper_search"
            android:text="@string/btn_customer_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/recyler_view_shopper_list"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/light_green"
            android:textSize="12sp"
            android:background="@drawable/button_shape"
            android:paddingHorizontal="10dp"/>

        <Button
            android:id="@+id/btn_customer_update_availability"
            android:layout_width="128dp"
            android:layout_height="31dp"
            android:layout_above="@+id/recyler_view_shopper_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/btn_shopper_search"
            android:textColor="@color/light_green"
            android:textSize="12sp"
            android:background="@drawable/button_shape"
            android:paddingHorizontal="10dp" />
    </RelativeLayout>

</RelativeLayout>