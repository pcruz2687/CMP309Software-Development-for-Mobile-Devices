<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout_customer_request_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:background="@color/item_background">

        <TextView
            android:id="@+id/tv_customer_request_email"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/tv_customer_request_email_icon"
            android:padding="4dp"
            android:textColor="@color/dark_grey_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_customer_request_email_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/customer_icon"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_customer_request_collapse_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:textColor="@color/background"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_customer_request_distance"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@id/tv_customer_request_email"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/tv_customer_request_distance_icon"
            android:padding="4dp"
            android:textColor="@color/light_grey_text" />

        <TextView
            android:id="@+id/tv_customer_request_distance_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_customer_request_email_icon"
            android:layout_margin="5dp"
            android:background="@drawable/ic_timeline_black_24dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_customer_shopping_list_header"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_above="@+id/tv_customer_request_shopping_list"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/tv_customer_shopping_list_header_icon"
            android:padding="4dp"
            android:text="@string/shopping_list_header"
            android:textColor="@color/dark_grey_text"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_customer_shopping_list_header_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/tv_customer_request_shopping_list"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-29dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_shopping_cart_24dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_customer_request_shopping_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="34dp"
            android:singleLine="false"
            android:lines="3"
            android:padding="4dp"
            android:textColor="@color/light_grey_text" />

        <Button
            android:id="@+id/btn_accept_customer_request"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/list_item_button_gradient"
            android:text="@string/btn_shopper_select_customer"
            android:textColor="@color/white_text"
            android:visibility="invisible" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
