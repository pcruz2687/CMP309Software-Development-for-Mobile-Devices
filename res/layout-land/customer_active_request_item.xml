<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/relative_layout_active_request_item"
        android:layout_width="675dp"
        android:layout_height="235dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tv_active_request_role"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/tv_active_request_role_icon"
            android:padding="4dp"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_active_request_role_icon"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_marginEnd="0dp"
            android:padding="4dp"
            android:text="@string/role_text"
            android:textColor="@color/dark_grey_text"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_active_request_customer_email"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@id/tv_active_request_role"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/tv_active_request_customer_email_icon"
            android:padding="4dp"
            android:textColor="@color/light_grey_text" />

        <TextView
            android:id="@+id/tv_active_request_customer_email_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_active_request_role_icon"
            android:layout_margin="5dp"
            android:background="@drawable/customer_icon"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_active_request_distance"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@id/tv_active_request_customer_email"
            android:layout_margin="3dp"
            android:layout_toEndOf="@+id/tv_active_request_distance_icon"
            android:padding="4dp"
            android:textColor="@color/light_grey_text" />

        <TextView
            android:id="@+id/tv_active_request_distance_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_active_request_customer_email_icon"
            android:layout_margin="5dp"
            android:background="@drawable/ic_timeline_black_24dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_active_request_shopping_list_header"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_above="@+id/tv_active_request_shopping_list"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/tv_active_request_shopping_list_header_icon"
            android:padding="4dp"
            android:text="@string/shopping_list_header"
            android:textColor="@color/dark_grey_text"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_active_request_shopping_list_header_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/tv_active_request_shopping_list"
            android:layout_alignParentStart="true"

            android:layout_marginHorizontal="5dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="-29dp"
            android:background="@drawable/ic_shopping_cart_24dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_active_request_shopping_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="5dp"
            android:lines="3"
            android:padding="4dp"
            android:singleLine="false"
            android:textColor="@color/light_grey_text" />

        <Button
            android:id="@+id/btn_active_request_finish"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="82dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/tv_active_request_shopping_list"
            android:background="@drawable/finish_button_gradient"
            android:text="Finish"
            android:textColor="@color/white_text"
            android:visibility="invisible" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
